	}
	--
	"\w8\w8\n\n"
	--
	if storestory[0] > currentstory[0]
	{"\![*]\q[Next Recording,OnChapterChange,next]\n"}
	else
	{"\![*]((Next Recording))\n"}
	--
	"\![*]\q[Select Recordings,OnChapterMenu]\n"
	--
	if _prev > 0
	{"\![*]\q[Previous Recording,OnChapterChange,back]\n"}
	else
	{"\![*]((Previous Recording))\n"}
	--
	"\![*]\q[Close,blank]"
